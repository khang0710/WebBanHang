@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<WebBanHang.Models.Product>
<div class="m-5 hero__item set-bg" data-setbg="img/hero/banner.jpg">
    <div class="hero__text">
        <span>FRUIT FRESH</span>
        <h2>Vegetable <br />100% Organic</h2>
        <p>Free Pickup and Delivery Available</p>
        <a href="#" class="primary-btn">SHOP NOW</a>
    </div>
</div>
<!-- Categories Section Begin -->
<section class="categories">
    <div class="container">
        <div class="row">
            <div class="categories__slider owl-carousel">
                @foreach (var item in Model)
            {
                <div class="col-lg-3">
                        <div class="categories__item set-bg" data-setbg="../img/upload/@item.Image">
                        <h5><a asp-controller="Cart" asp-action="Add" asp-route-id="@item.ProductId"></a></h5>
                    </div>
                </div>
            }
                
            </div>
        </div>
    </div>
</section>
<!-- Categories Section End -->
<!-- Featured Section Begin -->
<section class="featured spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Featured Product</h2>
                </div>
                <div class="featured__controls" style="color: black">
                    <ul>
                        @await Component.InvokeAsync("CategoryMenu")
                        
                    </ul>
                </div>
            </div>
        </div>
        <div class="row featured__filter">
            @foreach (var item in Model)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 mix oranges fresh-meat">
                    <div class="featured__item">
                        <div class="featured__item__pic set-bg" data-setbg="../img/upload/@item.Image">
                            <ul class="featured__item__pic__hover">
                                <li><a asp-controller="Cart" asp-action="Add" asp-route-id="@item.ProductId"><i class="fa fa-shopping-cart"></i></a></li>
                            </ul>
                        </div>
                        <div class="featured__item__text">
                            <h6><a href="#">@item.Name</a></h6>
                            <h5>@item.Price.ToString("N0") $</h5>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!-- Featured Section End -->