@{
    ViewData["Title"] = "DSAdmin";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@model List<User>
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Quản Lý Khách Hàng</h1>
    <p class="mb-4">
        DataTables is a third party plugin that is used to generate the demo table below.
        For more information about DataTables, please visit the <a target="_blank"
                                                                   href="https://datatables.net">official DataTables documentation</a>.
    </p>
    <div>
        <a asp-action="Index"> < Quay lại</a>
    </div>
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="container mt-5">
            <!-- Tab 1 -->
            <div class="tab-pane fade show active" id="tab1" role="tabpanel" aria-labelledby="tab1-tab">
                <table class="table table-striped mt-3">
                    <thead>
                        <tr>
                            <th>Mã</th>
                            <th>Tên</th>
                            <th>Email</th>
                            <th>Ngày tạo</th>
                            <th>Trạng thái</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            if (item.Role == "Customer")
                            {
                                <tr>
                                    <td>@item.UserId</td>
                                    <td>@item.Username</td>
                                    <td>@item.Email</td>
                                    <td>@item.CreatedAt</td>
                                    <td></td>
                                    <td>
                                        <a asp-area="Admin" asp-controller="User" asp-action="ChiTietTaiKhoan" asp-route-id="@item.UserId" class="btn btn-primary">
                                            <i class="fas fa-edit"></i> Chi Tiết
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- /.container-fluid -->
<!-- End of Main Content -->