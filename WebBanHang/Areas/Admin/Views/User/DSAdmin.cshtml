@{
    ViewData["Title"] = "DSAdmin";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@model List<User>
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Quản Lý Phân Quyền</h1>
    <p class="mb-4">
        DataTables is a third party plugin that is used to generate the demo table below.
        For more information about DataTables, please visit the <a target="_blank"
                                                                   href="https://datatables.net">official DataTables documentation</a>.
    </p>
    <div>
        <a asp-action="Index"> < Quay lại</a>
    </div>
    <div class="col-4">
        <a href="/Admin/User/CreateAdmin" class="btn btn-success">
            <span class="icon text-white-50">
                <i class="fas fa-plus"></i>
            </span>
            <span class="text">Tạo tài khoản</span>
        </a>
    </div> <br />
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        
        <div class="container mt-5">
            <!-- Tabs -->
            <ul class="nav nav-tabs" id="myTab" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="tab1-tab" data-bs-toggle="tab" data-bs-target="#tab1" type="button" role="tab" aria-controls="tab1" aria-selected="true">Admin</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="tab2-tab" data-bs-toggle="tab" data-bs-target="#tab2" type="button" role="tab" aria-controls="tab2" aria-selected="false">Staff</button>
                </li>
            </ul>

            <!-- Tab Content -->
            <div class="tab-content" id="myTabContent">
                <!-- Tab 1 -->
                <div class="tab-pane fade show active" id="tab1" role="tabpanel" aria-labelledby="tab1-tab">
                    <table class="table table-striped mt-3">
                        <thead>
                            <tr>
                                <th>Mã User</th>
                                <th>Tên</th>
                                <th>Ngày tạo</th>
                                <th>Email</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                if (item.Role == "Admin")
                                {
                                    <tr>
                                        <td>@item.UserId</td>
                                        <td>@item.Username</td>
                                        <td>@item.CreatedAt</td>
                                        <td>@item.Email</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Tab 2 -->
                <div class="tab-pane fade" id="tab2" role="tabpanel" aria-labelledby="tab2-tab">
                    <table class="table table-striped mt-3">
                        <thead>
                            <tr>
                                <th>Mã User</th>
                                <th>Tên</th>
                                <th>Ngày tạo</th>
                                <th>Email</th>
                                <th>Trạng thái</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                if (item.Role == "Customer")
                                {
                                    <tr>
                                        <td>@item.UserId</td>
                                        <td>@item.Username</td>
                                        <td>@item.CreatedAt</td>
                                        <td>@item.Email</td><td></td>
                                        <td>
                                            <a asp-area="Admin" asp-controller="User" asp-action="ChiTietTaiKhoan" asp-route-id="@item.UserId" class="btn btn-primary">
                                                <i class="fas fa-edit"></i> Chi Tiết
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /.container-fluid -->
<!-- End of Main Content -->