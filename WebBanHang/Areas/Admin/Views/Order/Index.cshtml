                    <table class="table table-striped mt-3">
                        <thead>
                            <tr>
                                <th>Mã ĐH</th>
                                <th>Ngày tạo</th>
                                <th>Tên Khách Hàng</th>
                                <th>Trạng thái</th>
                                <th>Thanh toán</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {   if (item.Status == "Delivered")
                                {
                                <tr>
